@{
    ViewData["Title"] = "ElectroTech";
}
@using ProyectoASll.ViewModels
@model ProyectoASll.ViewModels.EmpleadoVM

<!DOCTYPE html>
<html lang="es">
<body>
    <!-- Contenedor principal -->
    <div class="container container-layout mt-4 justify-content-center">
        <!-- Main content -->
        <main class="main-content">
            <section class="main-section">
                <section class="main-section buttons-section">
                    <a asp-area="" asp-controller="Catalogo" asp-action="Catalogo" style="text-decoration: none">
                        <div class="icon-button">
                            <i class="fas fa-file-invoice"></i>
                            <span>Cotizacion</span>
                        </div>
                    </a>
                    <a asp-area="" asp-controller="Cliente" asp-action="Cliente" style="text-decoration: none;">
                        <div class="icon-button">
                            <i class="fas fa-users"></i>
                            <span>Cliente</span>
                        </div>
                    </a>
                    <a asp-area="" asp-controller="Producto" asp-action="Producto" style="text-decoration: none;">
                        <div class="icon-button">
                            <i class="fas fa-box-open"></i>
                            <span>Producto</span>
                        </div>
                    </a>
                    <a asp-area="" asp-controller="Inventario" asp-action="Inventario" style="text-decoration: none;">
                        <div class="icon-button">
                            <i class="fas fa-cubes"></i>
                            <span>Inventario</span>
                        </div>
                    </a>

                </section>
            </section>

            <section class="main-section">

                <div class="charts-wrapper">
                    <!-- Gráfico de líneas -->
                    <div class="chart-container">
                        <canvas id="lineChart"></canvas>
                    </div>

                    <!-- Gráfico de pastel -->
                    <div class="chart-container">
                        <canvas id="pieChart"></canvas>
                    </div>
                </div>
            </section>

        </main>

        <!-- Aside content -->
        <aside class="aside-content">
            <!-- Sección de perfil -->
            <section class="aside-section profile-section">
                <img src="/img/default.jpg" alt="Avatar" class="profile-avatar">
                <h3 class="profile-name">@Model.Nombre</h3>
                <p class="profile-role">@Model.Rol</p>
                <p class="profile-contact">Tel: @Model.Telefono</p>
                <p class="profile-email">@Model.Email</p>
                <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                    <button class="logout-btn">Cerrar Sesión</button>
                </form>
            </section>

            <!-- Sección de historial -->
            <section class="aside-section history-section">
                <div class="history-header">
                    <h4>Historial</h4>
                    <a href="#" class="view-all-link">Ver todo</a>
                </div>
                <ul class="history-list">
                    <li>
                        <span class="status-dot status-active"></span>
                        Cotización <small>Turned on • Jaquiline</small>
                        <span class="history-time">03:20</span>
                    </li>
                    <li>
                        <span class="status-dot status-active"></span>
                        Cotización <small>Turned on • Firoz</small>
                        <span class="history-time">01:48</span>
                    </li>
                    <li>
                        <span class="status-dot status-error"></span>
                        Agregar producto <small>Turned off • Jaquiline</small>
                        <span class="history-time">11:36</span>
                    </li>
                    <li>
                        <span class="status-dot status-inactive"></span>
                        Cotización <small>Turned off • Jaquiline</small>
                        <span class="history-time">09:15</span>
                    </li>
                </ul>
            </section>
        </aside>

    </div>
</body>
</html>
