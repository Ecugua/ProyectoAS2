<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ElectroTech - Subcategorías</title>

</head>
<body>

    <!-- Contenedor principal -->
    <div class="container mt-4">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <a asp-area="" asp-controller="Inventario" asp-action="Inventario" class="btn btn-success">
                <i class="fas fa-arrow-left"></i>
            </a>
            <h2 class="text-success">Gestión de Subcategorías</h2>
            <a class="btn btn-outline-success" asp-action="Upsert">
                <i class="fas fa-plus"></i> Agregar SubCategoría
            </a>
        </div>

        <!-- Tabla de subcategorías -->
        <div class="table-responsive">
            <table id="tablaSubcategorias" class="table table-striped table-hover align-middle" style="width: 100%;">
                <thead class="table-success">
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Categoría</th>
                        <th scope="col">Descripción</th>
                        <th scope="col">Estado</th>
                        <th scope="col">Creado</th>
                        <th scope="col">Modificado</th>
                        <th scope="col">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- Subcategorías renderizadas dinámicamente -->
                </tbody>
            </table>
        </div>
    </div>

    <!-- Modal para Agregar Subcategoría -->
    <div class="modal fade" id="agregarSubcategoriaModal" tabindex="-1" aria-labelledby="agregarSubcategoriaModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="agregarSubcategoriaModalLabel">Agregar Subcategoría</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form id="formAgregarSubcategoria">
                        <div class="mb-3">
                            <label for="categoriaIdAgregar" class="form-label">Categoría</label>
                            <select class="form-select" id="categoriaIdAgregar" required></select>
                        </div>
                        <div class="mb-3">
                            <label for="descripcionAgregar" class="form-label">Descripción</label>
                            <input type="text" class="form-control" id="descripcionAgregar" required>
                        </div>
                        <div class="mb-3">
                            <label for="estadoAgregar" class="form-label">Estado</label>
                            <select class="form-select" id="estadoAgregar" required>
                                <option value="Activo">Activo</option>
                                <option value="Inactivo">Inactivo</option>
                            </select>
                        </div>
                        <button type="submit" class="btn btn-success w-100">Guardar Subcategoría</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal para Editar Subcategoría -->
    <div class="modal fade" id="editarSubcategoriaModal" tabindex="-1" aria-labelledby="editarSubcategoriaModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="editarSubcategoriaModalLabel">Editar Subcategoría</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form id="formEditarSubcategoria">
                        <input type="hidden" id="subcategoriaIdEditar">
                        <div class="mb-3">
                            <label for="categoriaIdEditar" class="form-label">Categoría</label>
                            <select class="form-select" id="categoriaIdEditar" required></select>
                        </div>
                        <div class="mb-3">
                            <label for="descripcionEditar" class="form-label">Descripción</label>
                            <input type="text" class="form-control" id="descripcionEditar" required>
                        </div>
                        <div class="mb-3">
                            <label for="estadoEditar" class="form-label">Estado</label>
                            <select class="form-select" id="estadoEditar" required>
                                <option value="Activo">Activo</option>
                                <option value="Inactivo">Inactivo</option>
                            </select>
                        </div>
                        <button type="submit" class="btn btn-success w-100">Guardar Cambios</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
</html>

