@{
    ViewData["Title"] = "ElectroTech";
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ElectroTech</title>

    <!-- Bootstrap 5.3.3 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- FontAwesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">

    <!-- Estilos CSS -->
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="stylesheet" href="/css/catalogoView.css">
    <!-- Chart.js CDN -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <!-- SweetAlert2 CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">

    <!-- SweetAlert2 JS -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

</head>

<body>
    <!-- Contenedor principal -->
    <div class="container-layout mt-4">
        <div class="catalogo-container mt-4 container container-sm container-md container-lg container-xl container-xxl">
            <div class="row">
                <!-- Primera fila: Contenedor 1 y Contenedor 2 -->
                <div class="col-md-2">
                    <a href="catalogo.html" class="btn-atras">
                        <i class="fas fa-chevron-left"></i> Atras
                    </a>
                </div>

                <div class="col-md-10">
                    <div class="informacion-productos d-flex justify-content-between align-items-center">
                        <p>Productos 1-35 de 61</p> <!-- Este se actualizará dinámicamente -->
                        <div class="ordenar-ver d-flex gap-2">
                            <select class="ordenar-select">
                                <option value="cantidad">Ordenar: Cantidad</option>
                                <option value="precio">Ordenar: Precio</option>
                            </select>
                            <select class="ver-select">
                                <option value="fecha">Ver: Fecha</option>
                                <option value="relevancia">Ver: Relevancia</option>
                            </select>

                            <!-- Botón del carrito con contador -->
                            <button class="btn-carrito">
                                <i class="fas fa-shopping-bag"></i>
                                <span class="contador-carrito">0</span>
                            </button>

                            <!-- Contenedor del carrito -->
                            <div class="carrito-overlay">
                                <div class="carrito">
                                    <h3>Carrito de Compras</h3>
                                    <ul class="lista-carrito"></ul>

                                    <div class="carrito-acciones">
                                        <button class="btn-vaciar-carrito">Vaciar Carrito</button>
                                        <!-- <button class="btn-confirmar">Confirmar Compra</button> -->
                                    </div>

                                </div>
                            </div>
                        </div>

                    </div>
                </div>

            </div>

            <div class="row mt-4">
                <!-- Segunda fila: Contenedor 3 y Contenedor 4 -->
                <div class="col-md-2">
                    <div class="filtros-container">
                        <h3 class="filtros-header">Filtros</h3>
                        <button class="quitar-filtro-btn">Quitar filtro</button>

                        <div class="filtro-seccion">
                            <h4 class="filtro-titulo">Precio</h4>
                            <ul class="precio-lista">
                                <li>$0.00 - $1,000.00</li>
                                <li>$1,000.00 - $2,000.00</li>
                                <li>$2,000.00 - $3,000.00</li>
                                <li>$3,000.00 - $4,000.00</li>
                                <li>$4,000.00 - $5,000.00</li>
                                <li>$5,000.00 - $6,000.00</li>
                                <li>$6,000.00 - $7,000.00</li>
                                <li>$7,000.00 And Above</li>
                            </ul>
                        </div>

                        <div class="filtro-seccion">
                            <h4 class="filtro-titulo">Color</h4>
                            <div class="color-opciones">
                                <label class="color-label">
                                    <input type="radio" name="color" value="black" />
                                    <span class="color-circulo" style="background-color: black;"></span>
                                </label>
                                <label class="color-label">
                                    <input type="radio" name="color" value="gray" />
                                    <span class="color-circulo" style="background-color: gray;"></span>
                                </label>
                            </div>
                        </div>

                        <div class="filtro-seccion">
                            <h4 class="filtro-titulo">Filtro</h4>
                        </div>

                        <button class="aplicar-filtros-btn">Aplicar filtros</button>
                    </div>
                </div>

                <div class="col-md-10">
                    <!-- Contenedor 4: Productos -->
                    <div class="grid-productos">
                        <div class="producto-tarjeta">
                            <a href="#">
                                <img src="/resources/laptop.png" alt="Producto">
                            </a>
                            <p class="producto-nombre">EX DISPLAY : MSI Pro 16</p>
                            <p class="producto-precio">$499.00</p>
                            <span class="prloducto-stock">In stock</span>
                        </div>


                    </div>
                </div>
            </div>
            <!-- Contenedor 5: Paginación -->
            <div class="row mt-0 mb-4">
                <div class="col-12 paginacion-container">
                    <div class="paginacion"></div> <!-- La paginación se generará dinámicamente aquí -->
                </div>
            </div>

            <!-- -------------modal para ver detalles del producto------- -->
            <div class="modal fade" id="detalleProductoModal" tabindex="-1" aria-labelledby="modalTitulo" aria-hidden="true">
                <div class="modal-dialog modal-lg">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="modalTitulo"></h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body d-flex">
                            <div class="col-6 centrar-imagen">
                                <img id="modalImagen" class="img-fluid" alt="Imagen del producto">
                            </div>
                            <div class="col-6 ps-4">
                                <p id="modalPrecio" class="fs-4 text-success"></p>
                                <p id="modalDescripcion"></p>
                                <button class="btn btn-success mt-4" id="modalAgregarCarrito">Agregar al Carrito</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>


        </div>
    </div>


    <!-- Bootstrap JS (Popper y Bootstrap) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Script personalizado -->
    <script src="/js/script.js"></script>
    <script src="/js/catalogoView.js"></script>
</body>
</html>

