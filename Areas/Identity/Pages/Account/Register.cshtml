@page
@model RegisterModel
@{
    Layout = null; // Desactiva el layout base si no quieres que use el layout principal
    ViewData["Title"] = "Registro";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - ElectroTech</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- FontAwesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">

    <!-- Custom CSS -->
    <link href="~/css/custom.css" rel="stylesheet" />
</head>
<body>
    <div class="container d-flex justify-content-center align-items-center vh-100">
        <div class="registrer-container text-center">
            <h1 class="logo">ElectroTech</h1>
            <h2 class="login-title">Registro</h2>
            <p class="login-subtitle">Crear una nueva cuenta en la plataforma</p>

            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input asp-for="Input.Nombre" class="form-control" autocomplete="Nombre" placeholder="Nombre" />
                            <label asp-for="Input.Nombre">Nombre</label>
                            <span asp-validation-for="Input.Nombre" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input asp-for="Input.Apellido" class="form-control" autocomplete="Apellido" placeholder="Apellido" />
                            <label asp-for="Input.Apellido">Apellido</label>
                            <span asp-validation-for="Input.Apellido" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" placeholder="name@example.com" />
                            <label asp-for="Input.Email">Correo electrónico</label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input asp-for="Input.Numero" class="form-control" autocomplete="Numero" placeholder="Número" />
                            <label asp-for="Input.Numero">Número</label>
                            <span asp-validation-for="Input.Numero" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input asp-for="Input.Password" type="password" class="form-control" autocomplete="new-password" placeholder="Contraseña" />
                            <label asp-for="Input.Password">Contraseña</label>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input asp-for="Input.ConfirmPassword" type="password" class="form-control" autocomplete="new-password" placeholder="Confirmar contraseña" />
                            <label asp-for="Input.ConfirmPassword">Confirmar contraseña</label>
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input asp-for="Input.Rol" class="form-control" autocomplete="Rol" placeholder="Rol" />
                            <label asp-for="Input.Rol">Rol</label>
                            <span asp-validation-for="Input.Rol" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group mb-3 text-start">
                            <label class="form-label" asp-for="Input.Imagen">Imagen</label>
                            <input asp-for="Input.Imagen" type="file" accept="image/png, image/gif, image/jpeg, image/jpg" class="form-control" />
                            <span asp-validation-for="Input.Imagen" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                
                <button id="registerSubmit" type="submit" class="btn btn-primary w-100">Registrar</button>
                <p class="mt-3">¿Ya tienes una cuenta? <a asp-page="./Login">Inicia sesión</a></p>
            </form>
        </div>
    </div>

    <!-- Validation Scripts -->
    <partial name="_ValidationScriptsPartial" />
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
